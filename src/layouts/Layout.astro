---
import '../styles/global.css';
import Profile from '../components/Profile';
import Navbar from '@/components/Navbar';
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Shamiul Alim</title>
	</head>
	<body class="bg-[#000000eb] ">
		<div class="flex flex-col justify-center sm:flex-row  gap-[1rem] pt-[1rem] min-h-screen">
			<div class="flex justify-center " >
				<Profile client:load/>
			</div>
			<div class="bg-[#23222285] h-screen sm:h-[96vh] pb-[3rem] sm:pb-0 w-full sm:w-[35rem] border-1 border-gray-800 rounded-2xl font-sans ">
				<Navbar  client:only="react" />
				<slot />
			</div> 
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
